{# Highlight - Dark #}

{% set content_width = content.field_image__highlight ? 'col-sm-9 col-xs-12' : 'col-xs-12' %}
{% set body = content.body|render %}
{% set has_button_1 = content.field_button_1|render|trim|length %}
{% set has_button_2 = content.field_button_2|render|trim|length %}

<div class="container"{{ attributes }}>
  <div class="row">
    {% if content.field_image__highlight %}
      <div class="col-sm-3 col-xs-12 container--logo">
        {{ content.field_image__highlight }}
      </div>
    {% endif %}
    <div class="{{ content_width }}">
      <div class="highlight-body">
        {{ body }}
      </div>
      {% if has_button_1 > 0 or has_button_2 > 0 %}
        <div class="highlight-buttons">
          {% if has_button_1 > 0 %}
            <a class="btn btn-primary" href="{{ content["field_button_1"][0]["#url"] }}">{{ content.field_button_1[0]['#title'] }}</a>
          {% endif %}
          {% if has_button_2 > 0 %}
            <a class="btn btn-primary" href="{{ content["field_button_2"][0]["#url"] }}">{{ content.field_button_2[0]['#title'] }}</a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>
